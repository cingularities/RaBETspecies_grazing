sd_grass = sd(srer_grass$cover)

species = srer_cover_rbind %>%
  group_by(species) %>%
  summarize(mean=mean(cover),  
            sd=sd(cover),  
            count=n(),  
            se=sd/sqrt(count),  
            upper_limit=mean+se,  
            lower_limit=mean-se)%>%
  group_by(species) 

mean_wood = sum(species$mean)
