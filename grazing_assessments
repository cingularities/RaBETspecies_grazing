               size = 1)+
  theme( legend.position = "none" , axis.text.x = element_text(angle = 90))+
  ylab("mean % cover")+stat_summary(fun.y="mean",color="red", shape=4)+
  geom_line(aes(y = mean_wood, group = 1), size = 1, color = 'red') 









