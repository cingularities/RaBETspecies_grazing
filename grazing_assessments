grass = srer_cover_rbind_bg %>%
  group_by(species,grazing) %>%
  summarize(mean=mean(cover),  
            sd=sd(cover),  
            count=n(),  
            se=sd/sqrt(count),  
            upper_limit=mean+sd,  
            lower_limit=mean-sd)

all = rbind(species,grass) 
